# along with this program.  If not, see <https://www.gnu.org/licenses/>.

set -e -x

# Store old kernel version
OLD_VERSION=$(apt-cache depends --installed linux-headers-generic-hwe-22.04 | tail -1 | cut -d- -f3-4)

# Purge restricted software
apt-get purge -y firmware-sof-signed

# Remove restricted repository
add-apt-repository -y --remove restricted

# Prepare to install bleux packages
wget https://gitlab.com/volian/volian-archive/uploads/b20bd8237a9b20f5a82f461ed0704ad4/volian-archive-keyring_0.1.0_all.deb \
     https://gitlab.com/volian/volian-archive/uploads/d6b3a118de5384a0be2462905f7e4301/volian-archive-nala_0.1.0_all.deb
wget https://github.com/bleux-os/ubuntu/releases/latest/download/bleux-repository.deb
apt-get install -y --mark-auto ./volian-archive-keyring_*_all.deb ./volian-archive-nala_*_all.deb
mv /etc/apt/sources.list.d/volian-archive-scar-unstable.sources /etc/apt/sources.list.d/volian-archive-scar-unstable.sources.disabled
apt-get install -y ./bleux-repository.deb

# Add universe repository
add-apt-repository -y universe

# Install bleux packages
apt-get install -y bleux-desktop gnome-software-plugin-snap-

# Purge transitional packages
apt-get purge -y gstreamer1.0-pulseaudio libwmf0.2-7-gtk libreoffice-ogltrans libreoffice-pdfimport

# Install nala
nala-add

# Disable apt
apt-disable

# Add flatpak support
flatpak-add

# Install firefox flatpak
flatpak install -y --noninteractive --no-related org.mozilla.firefox

# Remove snap support
snap-remove

# Add pipewire
pipewire-add

# Remove pulseaudio
pulseaudio-remove

# Update all packages
apt-get dist-upgrade -y

# Store new kernel version
NEW_VERSION=$(apt-cache depends --installed linux-headers-generic-hwe-22.04 | tail -1 | cut -d- -f3-4)

# Purge unused packages
apt-get autoremove -y --purge

# Decide if it needs to purge an older kernel version
if [ $OLD_VERSION != $NEW_VERSION ]; then
    apt-get purge -y linux-headers-$OLD_VERSION-generic linux-hwe-*-headers-$OLD_VERSION linux-image-$OLD_VERSION-generic linux-modules-$OLD_VERSION-generic linux-modules-extra-$OLD_VERSION-generic
fi

# Clean everything up
apt-get clean
rm customize *.deb
