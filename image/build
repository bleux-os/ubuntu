.PHONY: all extract customize cubic clean

all:
	$(MAKE) -f build extract
	$(MAKE) -f build customize
	$(MAKE) -f build cubic

extract:
	if [ -z "$(ISO_DIRECTORY)" ]; then exit 1; fi
	sed -i "s/is_success_copy = True/is_success_copy = False/" cubic.conf
	sed -i "s/is_success_extract = True/is_success_extract = False/" cubic.conf
	sed -i "s|\$${PWD}|$(PWD)|" cubic.conf
	sed -i "s|\$${ISO_DIRECTORY}|$(ISO_DIRECTORY)|" cubic.conf
	sed -i "s/\$${VERSION}/$$(head -n 1 version)/" cubic.conf
	sed -i "s/\$${RELEASE}/$$(tail -n 1 version)/" cubic.conf
	cubic .

customize:
	./customize

cubic:
	cubic .

clean:
	rm -rf custom-disk/
	sudo rm -rf custom-root/
	rm -f partition-1.img partition-2.img bleux-ubuntu-*.iso bleux-ubuntu-*.md5
