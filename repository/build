KEYRING=0105929FE7AFB070FD84492CD79521EF764DEAD2

.PHONY: all packages indexes clean

all:
	$(MAKE) -f build packages
	$(MAKE) -f build indexes

packages:
	$(MAKE) -C ../packages -f build
	cp -u ../packages/*/*.deb .

indexes: InRelease Release.gpg

InRelease: Release
	rm -f InRelease
	gpg --clearsign -u $(KEYRING) -o InRelease Release

Release.gpg: Release
	rm -f Release.gpg
	gpg -abs -u $(KEYRING) -o Release.gpg Release

Release: Packages.xz
	apt-ftparchive release . > Release

Packages.xz: Packages
	xz -k Packages

Packages: *.deb
	apt-ftparchive packages . > Packages

clean:
	rm -f InRelease Packages Packages.xz Release Release.gpg *.deb
